{
  "name": "@brugarolas/swing",
  "description": "A swipeable cards interface. The swipe-left/swipe-right for yes/no input. As seen in apps like Jelly and Tinder.",
  "version": "3.1.4",
  "author": "andres-brugarolas",
  "dependencies": {
    "hammerjs": "^2.0.8",
    "rebound": "^0.1.0",
    "sister": "^3.0.1",
    "prefix": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/cli": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/polyfill": "^7.2.5",
    "@babel/register": "^7.0.0",
    "babel-preset-minify": "^0.5.0",
    "eslint": "^5.12.0",
    "eslint-config-canonical": "^16.0.0",
    "husky": "^1.3.1",
    "raf": "^3.4.1",
    "mocha": "^5.2.0",
    "chai": "^4.2.0",
    "jsdom": "^13.1.0",
    "sinon": "^7.2.2",
    "semantic-release": "^15.13.3"
  },
  "keywords": [
    "swipe",
    "cards",
    "swipeable"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/index.js",
  "files": [
    "dist/index.js",
    "dist/Stack.js",
    "dist/Card.js",
    "dist/Direction.js",
    "dist/utilities.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brugarolas/swing"
  },
  "scripts": {
    "build": "babel ./src --out-dir ./dist --copy-files",
    "lint": "eslint ./src ./test",
    "test": "mocha --require @babel/register --exit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  }
}
